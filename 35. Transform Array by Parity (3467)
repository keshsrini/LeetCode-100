class Solution {
public:
    vector<int> transformArray(vector<int>& nums) {
        vector<int> arr(nums.size());
        for(int i=0;i<nums.size();i++){
            if(nums[i]%2==0){
                arr[i]=0;
            }else{
                arr[i]=1;
            }
        }sort(arr.begin(),arr.end());
        return arr;
    }
};
